#:kivy 1.11.1

<MainWindow>: # BoxLayout
    size: root.size

    TextInput:
        id: selected_files
        height: root.height
        size_hint_x: 3 / 4


    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 1 / 4

        Button:
            text: 'Load'
            on_press: root.show_load()

        Button:
            text: 'Confirm'

<LoadDialog>: # FloatLayout
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserIconView:
            id: filechooser
            multiselect: True

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release:root.cancel()

            Button:
                text: "Load"
                on_release: root._load(filechooser.path, filechooser.selection)

<OptionDialog>: # FloatLayout
    BoxLayout:
        size: root.size
        pos: root.pos

        BoxLayout: # contains all the options and choosing destination path
            TextInput:
                id: destination_text
                text: "Destination Directory"
            Button: 
                text: "..."


        BoxLayout: # contains all the options and choosing destination path
            orientation: "vertical"
            # Next Dialog
            Button:
                text: "Confirm"
            Button:
                text: "Cancel"
